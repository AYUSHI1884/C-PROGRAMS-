#include<stdio.h>
#include<conio.h>
void main()
{
float l,b,r,a,p,ac,c;
printf("enter length and breadth");
scanf("%f",&l,&b);
printf("enter radius");
scanf("%f",&r);
a=l*b;
p=2*(l+b);
ac=3.14*r*r;
c=2*3.14*r;
printf("area of the rectangle %f",a);
printf("perimeter of rectangle %f",p);
printf("area of circle %f",ac);
printf("circumference of circle %f",c);
getch();
}
